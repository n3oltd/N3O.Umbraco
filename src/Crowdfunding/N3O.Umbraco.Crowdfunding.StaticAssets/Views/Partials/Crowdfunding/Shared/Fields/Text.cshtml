@model N3O.Umbraco.Accounts.Models.FieldSettings

<div class="n3o-input__outer">
    <p class="n3o-p">@Html.Raw(Model.Required ? $"{Model.Label} <span style='color: red;'> *</span>" : $"{Model.Label}")</p>
    <div class="n3o-input">
        <input type="@Model.Type"
               name="@Model.Path"
               placeholder="@Model.Label"
               value="" 
               data-required="@Model.Required"/>
        <span id ="@Model.Path" class="n3o-input-validation-error"></span>
    </div>
</div>
