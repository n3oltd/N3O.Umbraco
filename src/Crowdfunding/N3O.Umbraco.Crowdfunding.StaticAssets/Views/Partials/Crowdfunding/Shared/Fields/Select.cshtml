@model SelectFieldSettings

<div class="input__outer big">
    <p>@Html.Raw(Model.Required ? $"{Model.Label} <span> *</span>" : $"{Model.Label}")</p>

    <div class="input sel">
        <select name="@Model.Path" placeholder="@Model.Label" style="width: 100%">

            @foreach (var option in Model.Options) {
                    if (option == Model.DefaultOption) {
                        <option selected value="@option.Value">@option.Text</option>
                    } else {
                        <option value="@option.Value">@option.Text</option>
                    }
                }
            }
        </select>
    </div>
    
    <span id="@Model.Path" class="input-validation-error"></span>
</div>