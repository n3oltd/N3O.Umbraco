@using Umbraco.Cms.Web.Website.Controllers
@using Umbraco.Extensions
@model N3O.Umbraco.CrowdFunding.Models.FundraisingPage.CrowdfundingSignInPageViewModel

@{
    Layout = null;
}

@if (!Model.IsAuthenticated) {
    @using (Html.BeginUmbracoForm<UmbExternalLoginController>(nameof(UmbExternalLoginController.ExternalLogin))) {
        <button type="submit" name="provider" value="@Model.Auth0LoginProvider.ExternalLoginProvider.AuthenticationType">
            Sign in with @Model.Auth0LoginProvider.AuthenticationScheme.DisplayName
        </button>
    }
}

@if (Model.IsAuthenticated) {
    <p>User @Context.User.Identity.Name is logged in</p>
}