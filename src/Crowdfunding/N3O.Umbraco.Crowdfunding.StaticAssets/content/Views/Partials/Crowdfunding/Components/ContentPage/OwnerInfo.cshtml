@using N3O.Umbraco.Templates
@model N3O.Umbraco.CrowdFunding.Models.FundraisingPage.CrowdfundingPageOwner

@inject IPartialText PartialText

@{
PartialText.SetPartialName("CrowdfundingPageAccountInfoViewModel");
}

<div class="account sm">
    <div class="account__main">
        <div class="account__info">
            <div class="account__info-avatar">
                <img src="@Model.AvatarLink" alt="">
            </div>
            <div class="account__info-name">
                <div class="large">
                    @Model?.Name
                </div>
                @if(Model.TeamName.HasValue()) {
                    <p class="subtle">
                        @PartialText.Get("Fundraising for") @Model?.TeamName
                    </p>
                }
            </div>
        </div>
        <div class="account__buttons">
            <button type="button" class="button secondary">
                @PartialText.Get("View Team")
            </button>
            <button type="button" class="button secondary modallBtn" data-mod="#modal-1">
                <svg>
                    <use xlink:href="#shareIcon"></use>
                </svg>
                @PartialText.Get("Share")
            </button>
        </div>
    </div>
</div>