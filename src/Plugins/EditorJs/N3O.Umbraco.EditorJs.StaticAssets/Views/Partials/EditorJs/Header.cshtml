@using N3O.Umbraco.EditorJs;
@using N3O.Umbraco.EditorJs.Models

@model EditorJsBlock<HeaderBlockData>

@switch (Model.Data.Level) {
	case 1:
		<h1 @(Model.GetTune<AlignmentTune>()?.ToStyle())>@Model.Data.Text</h1>
		break;

	case 2:
		<h2 @(Model.GetTune<AlignmentTune>()?.ToStyle())>@Model.Data.Text</h2>
		break;

	case 3:
		<h3 @(Model.GetTune<AlignmentTune>()?.ToStyle())>@Model.Data.Text</h3>
		break;

	case 4:
		<h4 @(Model.GetTune<AlignmentTune>()?.ToStyle())>@Model.Data.Text</h4>
		break;

	case 5:
		<h5 @(Model.GetTune<AlignmentTune>()?.ToStyle())>@Model.Data.Text</h5>
		break;

	case 6:
		<h6 @(Model.GetTune<AlignmentTune>()?.ToStyle())>@Model.Data.Text</h6>
		break;
}