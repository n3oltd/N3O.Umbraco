<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <RootNamespace>N3O.Umbraco.Scheduler.StaticAssets</RootNamespace>
    <TargetFramework>net5.0</TargetFramework>
    <LangVersion>9.0</LangVersion>
    <Copyright>Copyright Â© 2022 N3O Ltd</Copyright>
  </PropertyGroup>

  <PropertyGroup>
    <PackageId>N3O.Umbraco.Scheduler.StaticAssets</PackageId>
    <IsPackable>true</IsPackable>
    <ContentTargetFolders>.</ContentTargetFolders>
    <Authors>N3O Ltd</Authors>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Description>TODO</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageProjectUrl>https://n3o.ltd</PackageProjectUrl>
    <RepositoryUrl>https://github.com/n3oltd/N3O.Umbraco</RepositoryUrl>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugType>full</DebugType>
  </PropertyGroup>

  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="App_Plugins\N3O.Umbraco.Scheduler\**\*.*">
      <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
      <CopyToPublishDirectory>Always</CopyToPublishDirectory>
    </Content>

    <None Include="build\**\*.*">
      <Pack>True</Pack>
      <PackagePath>buildTransitive</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\N3O.Umbraco.Scheduler\N3O.Umbraco.Scheduler.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Update="README.md">
      <Pack>True</Pack>
    </None>
  </ItemGroup>
</Project>